@inherits RaccoonBlog.NancyFE.RazorView<RaccoonBlog.NancyFE.ViewModels.BlogPostsViewModel>

@foreach (var post in Model)
{
    <article>
        <header>
            <h2><a href="/@post.Path">@post.Title</a></h2>
            <span class="date">@post.PublishAt.ToString("u")</span>
        </header>
        @Html.Raw(post.Body)
    </article>
    <hr />
}